<Window x:Class="PZ5Shop.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="520" Width="460" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" Background="{StaticResource AppBackgroundBrush}">
    <Grid Margin="20">
        <Border Background="{StaticResource CardBrush}" CornerRadius="16" Padding="20" Effect="{StaticResource CardShadow}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Text="Создание аккаунта" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource PrimaryTextBrush}" />

                    <StackPanel Grid.Row="1" Margin="0,12,0,0">
                        <TextBlock Text="Фамилия" Foreground="{StaticResource SecondaryTextBrush}" />
                        <TextBox x:Name="LastNameBox" Margin="0,4,0,0" />
                    </StackPanel>
                    <StackPanel Grid.Row="2" Margin="0,12,0,0">
                        <TextBlock Text="Имя" Foreground="{StaticResource SecondaryTextBrush}" />
                        <TextBox x:Name="FirstNameBox" Margin="0,4,0,0" />
                    </StackPanel>
                    <StackPanel Grid.Row="3" Margin="0,12,0,0">
                        <TextBlock Text="Отчество" Foreground="{StaticResource SecondaryTextBrush}" />
                        <TextBox x:Name="MiddleNameBox" Margin="0,4,0,0" />
                    </StackPanel>
                    <StackPanel Grid.Row="4" Margin="0,12,0,0">
                        <TextBlock Text="Логин" Foreground="{StaticResource SecondaryTextBrush}" />
                        <TextBox x:Name="UsernameBox" Margin="0,4,0,0" />
                    </StackPanel>
                    <StackPanel Grid.Row="5" Margin="0,12,0,0">
                        <TextBlock Text="Email" Foreground="{StaticResource SecondaryTextBrush}" />
                        <TextBox x:Name="EmailBox" Margin="0,4,0,0" />
                    </StackPanel>
                    <StackPanel Grid.Row="6" Margin="0,12,0,0">
                        <TextBlock Text="Пароль" Foreground="{StaticResource SecondaryTextBrush}" />
                        <PasswordBox x:Name="PasswordBox" Margin="0,4,0,0" />
                    </StackPanel>

                    <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                        <Button Content="Отмена" Width="110" Margin="0,0,8,0" Click="OnCancel" />
                        <Button Content="Зарегистрироваться" Width="160" Click="OnRegister" />
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
